@page
@model TestCRUDOperations.Web.Pages.ManageUsersOfProjectModel
@{
    ViewData["Title"] = "ManageUsersOfProject";
}
<h2 class="text-center">Attach or disconnect users to project @Model.Project.Name</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Age
            </th>
            <th>
                Actions
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <form method="post">
                        <input type="submit" class="btn btn-default" asp-page-handler="AddUserToProject" asp-route-userIndex="@item.Id" asp-route-projId="@Model.ProjectId" value="Add" />
                        <input type="submit" class="btn btn-default" asp-page-handler="RemoveUserFromProject" asp-route-userIndex="@item.Id" asp-route-projId="@Model.ProjectId" value="Remove" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
