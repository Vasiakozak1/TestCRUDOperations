@page
@model TestCRUDOperations.Web.Pages.UsersModel
@{
    ViewData["Title"] = "Users";
}
<h2 class="text-center">Users</h2>
<table class="table table-striped table-responsive table-bordered">
    <thead>
        <tr>
            <th>
                First name
            </th>
            <th>
                Last name
            </th>
            <th>
                Age
            </th>
            <th>
                Actions
            </th>
            <th>
                Projects
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Age)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
                    <a asp-page="./ManageUserProjects" asp-route-userId="@item.Id">Manage projects</a>
                </td>
                <td>
                    <a asp-page="./UserProjects" asp-route-userId="@item.Id" class="form-control">Show projects</a>
                </td>
            </tr>
        }
    </tbody>
</table>
